<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_height="172dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:letterSpacing="0.15"
            android:lineSpacingExtra="6sp"
            tools:text="2020.05.12.18:00"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="@id/text_post_time"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="모바일 프로그래밍"
            android:textColor="@android:color/black"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="@id/text_post_time"
            app:layout_constraintTop_toBottomOf="@id/text_post_time"
            android:textSize="24sp"
            android:maxLines="1"
            android:maxLength="12"
            />
        <TextView
            android:id="@+id/text_contents"
            tools:text="월요일 6-9교시 모바일 프로그래밍 중간고사가 예정되어있습니다."
            android:maxWidth="216dp"
            android:maxLines="3"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/text_title"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/btn_add_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="달력에 등록"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="18dp"
            android:background="?attr/selectableItemBackground"
            android:textColor="#6202ee"
            android:layout_marginStart="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>